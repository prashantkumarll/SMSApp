@model SMSApp.Models.EmpRating
@{
    ViewBag.Title = "Skill Management Portal";
}

<h2>Skill Management Portal</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-3">
                <label class="label label-primary">Select a Skill</label>
                @Html.DropDownList("Skills", new List<SelectListItem>(ViewBag.Skills), "Select a value", new { @class = "form-control" }) <br />
            </div>
            <div class="col-md-3">
                <label class="label label-primary">Select a Rating</label>
                @Html.DropDownList("Ratings", new List<SelectListItem>(ViewBag.Ratings), "Select a value", new { @class = "form-control" })  <br />
            </div>
        </div>
        <input type="button" id="btnSubmit" value="Add Skills" class="btn btn-primary"  />

    }

    <label id="lblMessage"></label>

    <table class="table table-striped" id="tblContent">
        <thead>
            <tr>
                <th>Skill Name</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.SkillList)
            {
                <tr>
                    <td>@item.SkillName</td>
                    <td>@item.Rating</td>
                    <td><input type="button" class="btn btn-danger" id="btnDelete" value="Delete" /></td>
                    <td><input type="hidden" value="@item.Id" id="hdnId" class="ids" /></td>
                </tr>
            }
        </tbody>
    </table>   

</div>





